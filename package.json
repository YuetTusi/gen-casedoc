{
	"name": "gen-casedoc",
	"main": "dist/index.js",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"go": "electron .",
		"predev": "rimraf dist/**/*",
		"dev": "tsc src/main/index.ts --outDir dist && cross-env NODE_ENV=development concurrently \"vite\" \"pnpm run go\"",
		"prebuild": "rimraf dist/**/*",
		"build": "vite build && tsc src/main/index.ts --outDir dist",
		"preview": "vite preview",
		"dist": "electron-builder"
	},
	"build": {
		"appId": "4c9e34def3049532",
		"productName": "文档生成工具",
		"copyright": "Copyright © 2022 北京万盛华通科技有限公司",
		"directories": {
			"buildResources": "static"
		},
		"asar": true,
		"files": [
			"dist/**/*",
			"assets/**/*"
		],
		"extraResources": [],
		"win": {
			"target": [
				"nsis",
				"zip"
			],
			"icon": "icon.png",
			"publisherName": "yuet",
			"artifactName": "${productName}.${ext}",
			"requestedExecutionLevel": "requireAdministrator"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "installer.ico",
			"perMachine": true
		}
	},
	"dependencies": {
		"antd": "^4.23.6",
		"dayjs": "^1.11.6",
		"docx": "^7.5.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.4.2"
	},
	"devDependencies": {
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@vitejs/plugin-react": "^2.1.0",
		"concurrently": "^7.5.0",
		"cross-env": "^7.0.3",
		"electron": "^21.2.0",
		"electron-builder": "^23.6.0",
		"rimraf": "^3.0.2",
		"rollup-plugin-node-polyfills": "^0.2.1",
		"typescript": "^4.6.4",
		"vite": "^3.1.8",
		"vite-electron-plugin": "^0.4.6",
		"vite-plugin-optimizer": "^1.4.0"
	}
}
